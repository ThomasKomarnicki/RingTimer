<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:focusable="true"
    android:clickable="true"
    android:animateLayoutChanges="true">

    <!--<android.support.v7.widget.Toolbar-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:title="Add Timer"-->
        <!--android:id="@+id/add_timer_toolbar"-->
        <!--android:background="@color/colorPrimary">-->

    <!--</android.support.v7.widget.Toolbar>-->

    <com.github.komarnicki.thomas.ringtimer.addtimer.TimeInputView
        android:id="@+id/add_timer_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        app:label_text="Duration:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <com.github.komarnicki.thomas.ringtimer.addtimer.TimeInputView
        android:id="@+id/add_timer_break"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:animateLayoutChanges="true"
        app:label_text="Break:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_timer_duration"/>

    <Button
        android:id="@+id/add_timer_save"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:text="Save Timer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="503dp"/>

    <CheckBox
        android:id="@+id/add_timer_almost_done_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/add_timer_break"
        app:layout_constraintStart_toEndOf="@+id/textView"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Almost Done"
        app:layout_constraintBaseline_toBaselineOf="@+id/add_timer_almost_done_check"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="7dp"/>

    <com.github.komarnicki.thomas.ringtimer.addtimer.TimeInputView
        android:id="@+id/add_timer_almost_done"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:animateLayoutChanges="true"
        app:label_text="Break:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_timer_almost_done_check"
        app:layout_constraintTop_toTopOf="@+id/add_timer_almost_done_check"/>
</android.support.constraint.ConstraintLayout>